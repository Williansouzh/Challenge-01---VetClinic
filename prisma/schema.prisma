datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Pet {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  species       String 
  carry         String
  weight        Int
  date_of_birth String 
  tutor         Tutor   @relation(fields: [tutorId], references: [id])
  tutorId       String  @db.ObjectId
}

model Tutor {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  name          String 
  phone         String 
  email         String 
  date_of_birth String 
  zipCode       String 
  pets          Pet[]
}